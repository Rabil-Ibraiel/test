generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

generator seed {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/seed" // or wherever you want your seed script
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  id                  Int        @id @default(autoincrement())
  englishName         String
  arabicName          String
  abbr                String     @unique
  numberOfVoting      BigInt
  numberOfSubscribing BigInt
  lastYearChairs      Int
  thisYearChairs      Int
  color               String
  locations           Location[]
}

model Location {
  id                  Int    @id @default(autoincrement())
  regionCode          String
  numberOfVoting      BigInt
  numberOfSubscribing BigInt
  partyId             Int
  party               Party  @relation(fields: [partyId], references: [id], onDelete: Cascade)
}
